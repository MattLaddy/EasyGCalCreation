{
  "manifest_version": 3,
  "name": "Calendar Invite Creator",
  "description": "Create Google Calendar invites from selected text.",
  "version": "1.0",
  "permissions": [
    "contextMenus",
    "identity",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.googleapis.com/"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "oauth2": {
    "client_id": "162327068939-ev31pvd4koh0tb33f5ilf3b9pb5e1pgs.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/calendar.events"
    ]
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
